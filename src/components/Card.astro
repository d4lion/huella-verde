---
import { Image } from "astro:assets"
interface Props {
  title: string
  body: string
  href: string
  button_title: string
  image: string
}

const { href, title, body, button_title, image } = Astro.props
---

<div class="rounded-lg shadow bg-[#1e3c32] border-gray-700 hover:scale-[1.01]">
  <img class="rounded-t-lg p-8 w-max" src={image} alt="" />

  <div class="p-5">
    <a href="#">
      <h5
        class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
      >
        {title}
      </h5>
    </a>
    <p class="mb-3 font-normal text-white">
      {body}
    </p>
    <a
      href={href}
      class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-[#1e3c32] bg-white hover:bg-slate-200 rounded-lg focus:ring-4 focus:outline-none focus:ring-blue-300"
    >
      {button_title}
      <svg
        class="w-3.5 h-3.5 ml-2"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"></path>
      </svg>
    </a>
  </div>
</div>

<style>
  div > img {
    height: 400px;
  }
</style>
