---
interface Props {
  body: string
  name: string
  image: string
  role: string
}

const { image, body, name, role } = Astro.props
const caqui = "rgba(30,60,50)"
---

<div class="info-container">
  <img src={image} alt="miembro" class="image-member" />
  <div class="text-container">
    <div class="member-name text-center">{name}</div>
    <p class="text-center">{role}</p>
    <div class="team-body">{body}</div>
  </div>
</div>

<style define:vars={{ caqui }}>
  .info-container {
    font-family: "Poppins", sans-serif;
    font-weight: 200;
    display: flex;
    padding: 30px;
    border-radius: 15px;
    background: var(--caqui);
    color: white;
    gap: 1rem;
    box-shadow:
      rgba(0, 0, 0, 0.25) 0px 14px 28px,
      rgba(0, 0, 0, 0.22) 0px 10px 10px;
  }

  .info-container:hover {
    transform: scale(1.01);
  }

  .image-member {
    height: 300px;
    width: 230px;
    border-radius: 25px;
  }

  .text-container {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .member-name {
    font-size: 30px;
    font-weight: 400;
  }
</style>
