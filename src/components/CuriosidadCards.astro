---
import { Image } from "astro:assets"

interface Props {
  title: string
  image: string
  body: string
  href: string
}

const { image, title, body, href } = Astro.props
---

<a href={href}>
  <div class="card grid-cols-2 justify-items-center">
    <img src={image} alt="planta" />

    <div>
      <h1>{title}</h1>
      <p>
        {body}
      </p>
    </div>
  </div>
</a>

<style>
  .card {
    display: grid;
    border-radius: 20px;
    color: black;
    justify-content: center;
    align-items: center;
    padding: 50px;
    background-color: var(--cream);
    margin-bottom: 1rem;
    box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
    width: 100%;
    height: 100%;
  }

  .card > img {
    height: 130px;
  }

  .card > div > h1 {
    font-family: "Poppins", sans-serif;
    position: relative;
    bottom: 30px;
    text-align: center;
    color: #142e38;
    font-size: 50px;
    font-style: normal;
    font-weight: 700;
    line-height: 82px;
  }

  .card > div > p {
    position: relative;
    bottom: 30px;
  }

  .card:hover {
    transform: scale(1.02);
    cursor: pointer;
  }
</style>
