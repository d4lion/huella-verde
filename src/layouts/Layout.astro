---
import NavBar from "../components/NavBar.astro"
import FooTer from "../components/FooTer.astro"

import { ViewTransitions } from "astro:transitions"

interface Props {
  title: string
}

const { title } = Astro.props
const cream = "rgba(239, 240, 227, 1)"
const caqui = "#4b97a"
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/huella-verde-text-logo.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Gabarito&family=Inter:wght@100;200;400;500;600;700&family=Open+Sans:wght@300;600&family=Poppins:wght@300;500;700&display=swap"
      rel="stylesheet"
    />
    <ViewTransitions />
  </head>
  <body>
    <NavBar />
    <slot />
    <FooTer />
    <style is:global define:vars={{ cream, caqui }}>
      html {
        font-family: "Poppins", sans-serif;
        background-color: var(--cream);
      }

      code {
        font-family:
          Menlo,
          Monaco,
          Lucida Console,
          Liberation Mono,
          DejaVu Sans Mono,
          Bitstream Vera Sans Mono,
          Courier New,
          monospace;
      }

      ::-webkit-scrollbar {
        color: var(--cream);
      }

      ::-webkit-scrollbar-thumb {
        background-color: var(--caqui);
      }
    </style>
  </body>
</html>
