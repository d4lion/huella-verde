<style>
  img {
    width: 560px;
    height: 560px;
    border-radius: 50%;
    transform: scale(1.3);
    position: relative;
    right: 30px;
  }

  /* HERO SECTION*/

  .text-container {
    width: 600px;
    font-family: "Open Sans", sans-serif;
    padding: 2rem;
    border-radius: 5%;
    position: relative;
    left: 30px;
  }

  .tittle {
    font-family: "Poppins", sans-serif;
    color: #142e38;
    font-size: 62px;
    font-style: normal;
    font-weight: 700;
    line-height: 82px;
  }

  .hero-container {
    margin-top: 2rem;
    display: flex;
    justify-content: space-evenly;
    align-items: center;
  }

  .hero-section {
    height: 100vh;
  }

  .education-button {
    font-family: "Poppins", sans-serif;

    background-color: #318161;
    border-radius: 20px;
    color: white;
    font-weight: 400;
  }

  .education-button:hover {
    background-color: #4c9d7d;
  }

  /* CARDS SECTION */

  .cards-section {
    background-color: #318161;
    height: 80vh;
  }

  .card-container {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-gap: 20px;
    margin: 0 1rem 0 1rem;
  }

  .card {
    display: grid;
    border-radius: 20px;
    color: black;
    justify-content: center;
    align-items: center;
    padding: 30px;
    grid-template-columns: repeat(2, 1fr);
    background-color: #c1e2d4;
  }

  .card > img {
    height: 130px;
  }

  .card > div > h1 {
    font-family: "Poppins", sans-serif;
    position: relative;
    bottom: 30px;
    text-align: center;
    color: #142e38;
    font-size: 50px;
    font-style: normal;
    font-weight: 700;
    line-height: 82px;
  }

  .card > div > p {
    position: relative;
    bottom: 30px;
  }
</style>
